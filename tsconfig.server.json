{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "incremental": true,
    "isolatedModules": false,
    "noEmit": false,
    "outDir": "./dist",
    "typeRoots": [
      "./types/",
      "./node_modules/@types/"
    ]
  },
  "include": [
    "server/**/*.ts",
    "types/**/*.d.ts"
  ]
}
